# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file and UTF-8
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.go]
indent_style = tab
indent_size = 4

[*.{js,html,vue}]
indent_style = space
indent_size = 2
